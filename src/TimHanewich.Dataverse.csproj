<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0;net6.0;net7.0</TargetFrameworks>
    <Version>2.5.0</Version>
    <Authors>Tim Hanewich</Authors>
    <Description>Helper library for transacting with the Microsoft Dataverse service (formerly Common Data Service "CDS" or "XRM")</Description>
    <Copyright>Tim Hanewich</Copyright>
    <PackageIcon>dataverse.png</PackageIcon>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RepositoryUrl>https://github.com/TimHanewich/TimHanewich.Cds</RepositoryUrl>
    <PackageTags>cds,common data service,xrm,dataverse,teams</PackageTags>
    <FileVersion>0.0.0.0</FileVersion>
    <AssemblyVersion>0.0.0.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="dataverse.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
